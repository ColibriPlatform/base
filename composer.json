{
    "name": "ilhooq/colibri-base",
    "description": "The base for a modular application",
    "keywords": ["yii2", "admin", "modular"],
    "homepage": "http://colibri.sphilip.com/",
    "type": "yii2-extension",
    "license": "Gnu/GPL v3",
    "support": {
        "source": "https://github.com/ilhooq/colibri"
    },
    "require": {
        "php": ">=5.4.0",
        "dektrium/yii2-user": "0.9.9",
        "dektrium/yii2-rbac": "0.3.0",
        "pheme/yii2-settings": "^0.4.0"
    },
    "autoload": {
        "psr-4": {
            "colibri\\base\\": ""
        }
    },
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
